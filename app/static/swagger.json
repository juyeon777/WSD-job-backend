{
  "swagger": "2.0",
  "info": {
    "title": "YeonHire: Job Management API",
    "description": "채용 공고 API 문서",
    "version": "1.0.0"
  },
  "host": "127.0.0.1:5000",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "인증 및 사용자 관리"
    },
    {
      "name": "Applications",
      "description": "채용 공고 지원 관리"
    },
    {
      "name": "Bookmarks",
      "description": "북마크 관리"
    },
    {
      "name": "Jobs",
      "description": "채용 공고 관리"
    }
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Enter JWT token in the format: Bearer <token>"
    }
  },
  "security": [
    {
      "Bearer": []
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "회원가입",
        "description": "사용자 회원가입을 수행합니다.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": [
                "username",
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "Invalid input or user already exists"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "로그인",
        "description": "사용자 로그인을 수행하고 JWT 토큰을 반환합니다.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful, returns tokens"
          },
          "401": {
            "description": "Invalid email or password"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "로그아웃",
        "description": "사용자 로그아웃을 수행하고 토큰을 블랙리스트에 추가합니다.",
        "responses": {
          "200": {
            "description": "Logged out successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "토큰 갱신",
        "description": "Refresh 토큰을 검증하고 새로운 Access 토큰을 반환합니다.",
        "responses": {
          "200": {
            "description": "New access token issued"
          },
          "401": {
            "description": "Invalid or expired refresh token"
          }
        }
      }
    },
    "/auth/profile": {
      "put": {
        "tags": [
          "Auth"
        ],
        "summary": "프로필 수정",
        "description": "사용자 정보를 수정합니다.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Profile updated successfully"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      },
      "delete": {
        "tags": [
          "Auth"
        ],
        "summary": "회원 탈퇴",
        "description": "사용자 계정을 삭제합니다.",
        "responses": {
          "200": {
            "description": "User deleted successfully"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/auth/activity": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "활동 로그 조회",
        "description": "사용자의 로그인 이력, 지원 내역, 북마크 내역을 반환합니다.",
        "responses": {
          "200": {
            "description": "Activity log fetched successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/applications": {
      "post": {
        "tags": [
          "Applications"
        ],
        "summary": "지원하기",
        "description": "사용자가 채용 공고에 지원합니다.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "type": "object",
              "properties": {
                "job_id": {
                  "type": "integer"
                }
              },
              "required": [
                "job_id"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Application submitted successfully"
          },
          "400": {
            "description": "Already applied or invalid input"
          }
        }
      },
      "get": {
        "tags": [
          "Applications"
        ],
        "summary": "지원 내역 조회",
        "description": "사용자의 지원 내역을 조회합니다.",
        "responses": {
          "200": {
            "description": "Application list fetched successfully"
          }
        }
      }
    },
    "/bookmarks": {
      "post": {
        "tags": [
          "Bookmarks"
        ],
        "summary": "북마크 추가/제거",
        "description": "북마크를 추가하거나 제거합니다.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "type": "object",
              "properties": {
                "job_id": {
                  "type": "integer"
                }
              },
              "required": [
                "job_id"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Bookmark toggled successfully",
            "examples": {
              "application/json": {
                "status": "success",
                "message": "Bookmark added successfully"
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "examples": {
              "application/json": {
                "status": "error",
                "message": "Job ID is required"
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Bookmarks"
        ],
        "summary": "북마크 목록 조회",
        "description": "사용자의 북마크 목록을 조회합니다.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "type": "integer",
            "default": 1
          },
          {
            "name": "size",
            "in": "query",
            "type": "integer",
            "default": 10
          }
        ],
        "responses": {
          "200": {
            "description": "Bookmark list fetched successfully"
          }
        }
      }
    },
    "/jobs": {
      "get": {
        "tags": [
          "Jobs"
        ],
        "summary": "채용 공고 목록 조회",
        "description": "페이지네이션, 필터링 및 검색 기능을 제공하여 채용 공고를 조회합니다.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "페이지 번호 (기본값: 1)",
            "required": false,
            "type": "integer",
            "default": 1
          },
          {
            "name": "size",
            "in": "query",
            "description": "페이지 크기 (기본값: 20)",
            "required": false,
            "type": "integer",
            "default": 20
          },
          {
            "name": "sort",
            "in": "query",
            "description": "정렬 기준 (예: created_at, salary)",
            "required": false,
            "type": "string"
          },
          {
            "name": "region",
            "in": "query",
            "description": "지역별 필터링 (예: 서울, 부산)",
            "required": false,
            "type": "string"
          },
          {
            "name": "experience",
            "in": "query",
            "description": "경력별 필터링 (예: 신입, 경력)",
            "required": false,
            "type": "string"
          },
          {
            "name": "salary",
            "in": "query",
            "description": "급여별 필터링 (예: 3000, 5000)",
            "required": false,
            "type": "integer"
          },
          {
            "name": "tech_stack",
            "in": "query",
            "description": "기술 스택별 필터링 (예: Python, Java)",
            "required": false,
            "type": "string"
          },
          {
            "name": "keyword",
            "in": "query",
            "description": "키워드 검색 (포지션, 회사명 포함)",
            "required": false,
            "type": "string"
          },
          {
            "name": "company_name",
            "in": "query",
            "description": "회사명 검색",
            "required": false,
            "type": "string"
          },
          {
            "name": "position",
            "in": "query",
            "description": "포지션 검색",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "공고 목록 조회 성공",
            "schema": {
              "type": "object",
              "properties": {
                "jobs": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "title": {
                        "type": "string"
                      },
                      "company_name": {
                        "type": "string"
                      },
                      "region": {
                        "type": "string"
                      },
                      "experience": {
                        "type": "string"
                      },
                      "salary": {
                        "type": "integer"
                      },
                      "tech_stack": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      }
                    }
                  }
                },
                "page": {
                  "type": "integer"
                },
                "size": {
                  "type": "integer"
                },
                "total_pages": {
                  "type": "integer"
                },
                "total_jobs": {
                  "type": "integer"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 파라미터"
          },
          "500": {
            "description": "서버 오류"
          }
        }
      }
    },
    "/jobs/{id}": {
      "get": {
        "tags": [
          "Jobs"
        ],
        "summary": "채용 공고 상세 조회",
        "description": "특정 채용 공고의 상세 정보를 조회합니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "조회할 채용 공고의 ID",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "상세 조회 성공"
          },
          "404": {
            "description": "공고를 찾을 수 없음"
          },
          "500": {
            "description": "서버 오류 발생"
          }
        }
      }
    },
    "404": {
      "description": "해당 공고를 찾을 수 없음",
      "examples": {
        "application/json": {
          "status": "error",
          "message": "Job not found"
        }
      }
    },
    "500": {
      "description": "서버 오류",
      "examples": {
        "application/json": {
          "status": "error",
          "message": "Failed to fetch job details"
        }
      }
    }
  }
}